<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.ctoolkit.maven</groupId>
        <artifactId>ctoolkit-parent</artifactId>
        <version>1</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.ctoolkit.restapi</groupId>
    <artifactId>rest-client-facade-api</artifactId>
    <version>0.6-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Uniform REST Client Facade API</name>
    <description>Uniform client facade API to perform common operations on top of REST
        to serve a resources of various REST APIs through single interface.
    </description>
    <url>https://github.com/turnonline/rest-client-facade-api</url>

    <scm>
        <connection>scm:git:[fetch=]git@github.com:turnonline/rest-client-facade-api.git</connection>
        <developerConnection>scm:git:[push=]git@github.com:turnonline/rest-client-facade-api.git</developerConnection>
        <url>https://github.com/turnonline/rest-client-facade-api</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <url>${project.scm.url}/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Aurel Medvegy</name>
            <id>medvegy</id>
            <email>aurel.medvegy@ctoolkit.org</email>
        </developer>
    </developers>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <!-- Include site generation and deployment into release -->
                    <goals>deploy site site-deploy</goals>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>2.0.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jmockit</groupId>
            <artifactId>jmockit</artifactId>
            <version>1.18</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
